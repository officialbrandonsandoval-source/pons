{
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": {
      "description": "Your Supabase project URL",
      "required": true
    },
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Your Supabase anonymous key",
      "required": true
    },
    "SUPABASE_SERVICE_KEY": {
      "description": "Your Supabase service role key",
      "required": true
    },
    "NEXTAUTH_SECRET": {
      "description": "NextAuth secret (generate with: openssl rand -base64 32)",
      "required": true
    },
    "NEXTAUTH_URL": {
      "description": "Your deployment URL (e.g., https://your-app.vercel.app)",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for GPT-4 and embeddings",
      "required": true
    }
  }
}
